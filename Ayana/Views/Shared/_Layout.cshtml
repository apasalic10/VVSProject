    <style>
 

        .navbar-custom {
            background-color: white;
        }

        .topnav-centered {
            float: none;
            position: absolute;
            top: 30%;
            left: 50%;
            transform: translate(-50%, -50%);
            -webkit-text-fill-color: black;
            font-size: xx-large;
            font-weight: 600;
        }

            .topnav-centered a:link {
                text-decoration: none;
            }

            .topnav-centered a:visited {
                text-decoration: none;
            }

            .topnav-centered a:hover {
                text-decoration: none;
            }

            .topnav-centered a:active {
