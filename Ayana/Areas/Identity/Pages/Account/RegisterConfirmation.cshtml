@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirm Email";
}

<h2>Confirm Email</h2>

<p>Please enter the confirmation code you received via email.</p>

@if (Model.Email != null)
{
    ViewBag.email = Model.Email;
    <p>Confirm the email for: <strong>@Model.Email</strong></p>

}


<form method="post">
    <input type="hidden" name="Email" value="@ViewBag.email" />
    <!-- ... your existing code ... -->
    <div class="form-group">
        <label for="confirmationCode">Confirmation Code:</label>
        <input type="text" class="form-control" id="confirmationCode" name="confirmationCode" required>
    </div>
    <button type="submit" class="btn btn-primary">Confirm Email</button>
</form>